<Window x:Class="WpfApp.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Order ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtOrderID" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Customer ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCustomerID" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Employee ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmployeeID" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Order Date:" Width="80" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpOrderDate" Width="120"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0"/>
        <Button Content="OK" Click="OkButton_Click" Margin="28,11,478,294" Grid.Row="1"/>
        <Button Content="Cancel" Click="CancelButton_Click" Margin="102,11,402,294" Grid.Row="1"/>
    </Grid>
</Window>
