<Window x:Class="WpfApp.ProfileManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Label Content="Edit Customer Profile" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Vertical" Margin="0,30,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Customer ID:" Width="140"/>
                <TextBox x:Name="txtCustomerID" Width="300" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Company Name:" Width="140"/>
                <TextBox x:Name="txtCompanyName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Contact Name:" Width="140"/>
                <TextBox x:Name="txtContactName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Contact Title:" Width="140"/>
                <TextBox x:Name="txtContactTitle" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Address:" Width="140"/>
                <TextBox x:Name="txtAddress" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Phone:" Width="140"/>
                <TextBox x:Name="txtPhone" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="Save" Width="80" Margin="5" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
