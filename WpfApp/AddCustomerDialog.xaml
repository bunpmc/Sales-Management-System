<Window x:Class="WpfApp.AddCustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="356" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Label Content="Customer Information" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="0,0,0,10"/>

        <StackPanel Orientation="Vertical" Margin="0,30,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Ma khach hang:" Width="120"/>
                <TextBox x:Name="txtCustomerID" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Ten cong ty:" Width="120"/>
                <TextBox x:Name="txtCompany" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Ten lien lac:" Width="120"/>
                <TextBox x:Name="txtContactName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Tieu de lien lac:" Width="120"/>
                <TextBox x:Name="txtContactTitle" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Dia chi:" Width="120"/>
                <TextBox x:Name="txtAddress" Width="200" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="So dien thoai:" Width="120"/>
                <TextBox x:Name="txtPhone" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnAddCustomer" Content="Add" Width="80" Margin="5" Click="btnAddCustomer_Click"/>
                <Button Content="Cancel" Width="80" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
