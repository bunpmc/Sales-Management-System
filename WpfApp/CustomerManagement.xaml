<Window x:Class="WpfApp.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="CustomerManagement" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lvCustomer" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,260" SelectionChanged="lvCustomer_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ma khach hang" DisplayMemberBinding="{Binding CustomerID}"/>
                    <GridViewColumn Header="Ten cong ty" DisplayMemberBinding="{Binding CompanyName}"/>
                    <GridViewColumn Header="Ten lien lac" DisplayMemberBinding="{Binding ContactName}"/>
                    <GridViewColumn Header="Tieu de lien lac" DisplayMemberBinding="{Binding ContactTitle}"/>
                    <GridViewColumn Header="Dia chi" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="So dien thoai" DisplayMemberBinding="{Binding Phone}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Ma khach hang:" HorizontalAlignment="Left" Margin="62,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Ten cong ty:" HorizontalAlignment="Left" Margin="62,243,0,0" VerticalAlignment="Top"/>
        <Label Content="Ten lien lac:" HorizontalAlignment="Left" Margin="62,269,0,0" VerticalAlignment="Top"/>
        <Label Content="Tieu de lien lac:" HorizontalAlignment="Left" Margin="62,297,0,0" VerticalAlignment="Top"/>
        <Label Content="Dia chi:" HorizontalAlignment="Left" Margin="62,323,0,0" VerticalAlignment="Top"/>
        <Label Content="So dien thoai:" HorizontalAlignment="Left" Margin="62,366,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCustomerID" HorizontalAlignment="Left" Margin="171,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCompany" HorizontalAlignment="Left" Margin="171,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtContactName" HorizontalAlignment="Left" Margin="171,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtContactTitle" HorizontalAlignment="Left" Margin="171,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="171,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="30"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="171,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Customer Information" HorizontalAlignment="Left" Margin="23,186,0,0" VerticalAlignment="Top" Width="149" FontWeight="Bold"/>
        <Button x:Name="btnAddCustomer" Content="Add Customer" HorizontalAlignment="Left" Margin="325,220,0,0" VerticalAlignment="Top" Width="101" Click="btnAddCustomer_Click"/>
        <Button x:Name="btnRemoveCustomer" Content="Remove Customer" HorizontalAlignment="Left" Margin="325,250,0,0" VerticalAlignment="Top" Click="btnRemoveCustomer_Click"/>
        <Button x:Name="btnUpdateCustomer" Content="Update Customer" HorizontalAlignment="Left" Margin="325,282,0,0" VerticalAlignment="Top" Width="101" Click="btnUpdateCustomer_Click"/>
        <Label Content="Ma khach hang:" HorizontalAlignment="Left" Margin="460,221,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCustomerID_Search" HorizontalAlignment="Left" Margin="561,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Search Customer" HorizontalAlignment="Left" Margin="460,186,0,0" VerticalAlignment="Top" Width="149" FontWeight="Bold"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="697,223,0,0" VerticalAlignment="Top" Width="74" Click="btnSearch_Click"/>
    </Grid>
</Window>
